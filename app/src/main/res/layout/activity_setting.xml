<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">



            </LinearLayout>

        </RelativeLayout>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="4dp"
            android:layout_margin="5dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="@integer/detailedview_label_weight"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/txt_latitude"
                        android:id="@+id/detailedview_latitude_label"/>

                    <EditText
                        android:minWidth="@dimen/view_text_width"
                        android:layout_weight="@integer/detailedview_text_weight"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/detailedview_latitude_text"
                        android:text=""
                        android:selectAllOnFocus="true"
                        android:textIsSelectable="true"
                        android:editable="false"
                        android:background="@null"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="@integer/detailedview_label_weight"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/txt_longitude"
                        android:id="@+id/detailedview_longitude_label"/>

                    <EditText
                        android:minWidth="@dimen/view_text_width"
                        android:layout_weight="@integer/detailedview_text_weight"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/detailedview_longitude_text"
                        android:text=""
                        android:selectAllOnFocus="true"
                        android:textIsSelectable="true"
                        android:editable="false"
                        android:background="@null"
                        />
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>
</ScrollView>